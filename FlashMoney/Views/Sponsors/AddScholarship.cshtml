                                                    <input type="radio" name="IsPaid" id="option1" value="True" checked> Free
                                                </label>
                                                <label class="btn btn-secondary" style="padding: 5px">
                                                    <input type="radio" name="IsPaid" id="option2" value="False"> Paid
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <div class="input with-icon">
                                        <input class="text" type="number" id="appno" name="ApplicantsNumber" required placeholder="No. of Applicants" data-toggle="tooltip" data-placement="bottom" title="No. of applicant to be awarded" />
