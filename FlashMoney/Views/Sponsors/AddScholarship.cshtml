<section class="content settings">
    <div class="contianer">
        @if (!string.IsNullOrWhiteSpace((string)TempData["Success"]))
        {

            <div class="Msg alert alert-success text-center">
                @TempData["Success"]
            </div>
        }
        @if (!string.IsNullOrWhiteSpace((string)TempData["Error"]))
        {
            //var kk = 0;
            <div class="Msg alert alert-danger text-center">
                @TempData["Error"]
            </div>
        }
